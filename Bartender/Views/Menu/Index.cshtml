@model IEnumerable<Bartender.Models.Drink>

@{
    ViewBag.Title = "Menu";
}

<h1>Menu</h1>

@* Table created to store all drinks and order buttons*@
<div>
    <table class="table table-bordered table-striped">
        <thead class="text-info">
        <tr >
            @*Pulls Header information from the model*@
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.ABV)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th></th>
        </tr>
        </thead>

        @* table body - holds all drink info for general menu items
            I made these up using google's help :p *@
        <tbody>
        @foreach (var drinkItem in Model)
          {
              <tr>
                  @*The following table data tags display the data from the list being passed into the view using the drinkItem variable*@
                  <td>@drinkItem.Name</td>
                  <td>@drinkItem.Description</td>
                  <td>@drinkItem.ABV</td>
                  <td>$@drinkItem.Price</td>
                  <td>
                      @Html.ActionLink("Order", "MethodAddOrder", "Order", drinkItem, new {@class = "btn btn-primary"})
                  </td>
              </tr>
          }
        
        </tbody>
    </table>
</div>

