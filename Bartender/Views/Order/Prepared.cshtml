@model IEnumerable<Bartender.Models.Drink>


@{
    ViewBag.Title = "Prepared"; 
}

<h1>Prepared Drinks</h1>

@*A queue showing all the drinks that the bartender needs to prepare.
    -Also includes a button next to each drink to remove them from the bartender's queue*@
<div>
    <table class="table table-bordered table-striped">
        <thead class="text-info">
            <tr>
                @*Pulls Header information from the model through the controller*@
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.ABV)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>Remove Drinks Once Prepared</th>
            </tr>
        </thead>

        @* table body - holds all drink info foritems needing to be made *@
        <tbody>
            @foreach (var preparedItem in Model)
            {
                <tr>
                    <th>@preparedItem.Name</th>
                    <th>@preparedItem.Description</th>
                    <th>@preparedItem.ABV</th>
                    <th>$@preparedItem.Price</th>
                    <th>
                        @Html.ActionLink("Drink Made, Remove from Orders", "MethodRemovePreparedDrink", "Order", preparedItem, new { @class = "btn btn-primary" })
                    </th>
                </tr>
            }

        </tbody>
    </table>
</div>
